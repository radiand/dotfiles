# activate pyenv
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

pipvenv() {
    if [ ! -d './.venv' ]; then
        python3 -m venv .venv
    fi

    . venv/bin/activate
}

uvvenv() {
    if [ ! -d './.venv' ]; then
        uv venv $@
    fi
    . .venv/bin/activate
}

pyclean() {
    find . -type f -name '*.py[co]' -delete -o -type d -name __pycache__ -delete
}
